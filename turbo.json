{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_*",
    "EXPO_PUBLIC_*",
    "REACT_APP_*",
    "DATABASE_URL",
    "DIRECT_DATABASE_URL",
    "SUPABASE_SERVICE_ROLE_KEY",
    "STRIPE_SECRET_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "STRIPE_PUBLIC_KEY",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "CLOUDINARY_URL",
    "RESEND_API_KEY",
    "CODECOV_TOKEN",
    "CRON_SECRET",
    "SLACK_WEBHOOK_URL",
    "VERCEL_AUTOMATION_BYPASS_SECRET",
    "ENABLE_IMMEDIATE_PAYMENT_ON_APPROVAL",
    "NEXTAUTH_E2E_ENABLE",
    "E2E_USER_EMAIL",
    "E2E_PASS",
    "E2E_MENTOR_USER_EMAIL",
    "E2E_ADMIN_USER_EMAIL",
    "METABASE_DB_PASS",
    "POSTGRES_PASSWORD"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "cache": true,
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "EXPO_PUBLIC_*",
        "DATABASE_URL",
        "DIRECT_DATABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "CLOUDINARY_URL",
        "RESEND_API_KEY",
        "CRON_SECRET"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"],
      "cache": false
    },
    "test:e2e": {
      "outputs": ["playwright-report/**", "test-results/**"],
      "dependsOn": ["build"],
      "cache": false
    },
    "prisma:generate": {
      "cache": false,
      "outputs": []
    }
  }
}