# 基本デバッグモード（本番環境での一時的デバッグ用）
NEXT_PUBLIC_DEBUG=false

# 詳細デバッグモード（開発環境でのみ有効）
NEXT_PUBLIC_DEBUG_VERBOSE=false

NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# supabase DB URL
DATABASE_URL=postgresql://user:password@host:5432/database
DIRECT_DATABASE_URL=postgresql://user:password@host:5432/database

CODECOV_TOKEN=your_codecov_token

CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# API設定
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_AI_SERVICE_URL=https://your-ai-service-url.com

# 環境設定
NODE_ENV="development"

# stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# auth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

RESEND_API_KEY=re_your_resend_api_key

# レッスン価格
NEXT_PUBLIC_LESSON_PRICE_ID=price_your_lesson_price_id
NEXT_PUBLIC_LESSON_FLEXIBLE_PRICE_ID=price_your_flexible_price_id

# サブスク価格
NEXT_PUBLIC_SUBSCRIPTION_STARTER_ID=price_your_starter_id
NEXT_PUBLIC_SUBSCRIPTION_PRO_ID=price_your_pro_id
NEXT_PUBLIC_SUBSCRIPTION_PREMIUM_ID=price_your_premium_id

# slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

VERCEL_AUTOMATION_BYPASS_SECRET=your_vercel_secret

# 開発環境
NEXT_PUBLIC_URL=https://your-app-url.com

# CRON処理
CRON_SECRET=your_cron_secret

# 決済タイミング制御
# true: メンター承認時に2時間以内の予約は即座決済
# false: すべての決済をCronジョブに委ねる（メンター承認時の即座決済を無効化）
ENABLE_IMMEDIATE_PAYMENT_ON_APPROVAL=true

