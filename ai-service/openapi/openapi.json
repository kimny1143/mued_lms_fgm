          },
          "goal": {
            "type": "string",
            "description": "学習目標"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "含めるべきキーワード"
          }
        },
        "required": [
          "topic",
          "level"
        ],
        "example": {
          "topic": "ジャズピアノ入門",
          "level": "beginner",
          "goal": "基本的なジャズピアノコードと即興演奏の基礎を学ぶ",
          "keywords": [
            "ジャズハーモニー",
            "コードプログレッション",
            "即興演奏"
          ]
        }
      },
      "CourseGenerationResponse": {
        "title": "CourseGenerationResponse",
        "description": "コース生成レスポンスモデル",
        "type": "object",
        "properties": {
          "course_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "level": {
            "type": "string"
          },
          "estimated_duration_hours": {
            "type": "number"
          },
          "modules": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CourseModule"
            }
          }
        },
        "required": [
          "course_id",
          "title",
          "description",
          "level",
          "estimated_duration_hours",
          "modules"
