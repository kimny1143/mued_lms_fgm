          "level": "beginner",
          "estimated_duration_hours": 12.5,
          "modules": [
            {
              "title": "ジャズハーモニーの基礎",
              "description": "ジャズで使われる基本的なコードとスケールを学びます。",
              "order": 1,
              "lessons": [
                {
                  "title": "ジャズピアノ入門",
                  "description": "ジャズピアノの基本とコースの概要",
                  "content_type": "video",
                  "duration_minutes": 15,
                  "content_url": "https://example.com/videos/jazz-intro"
